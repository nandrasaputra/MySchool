<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_chat_conversation_item_profile_picture"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@color/colorPrimary"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_chat_conversation_item_name_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/fragment_chat_conversation_item_profile_picture"
        app:layout_constraintBottom_toBottomOf="@id/fragment_chat_conversation_item_profile_picture"
        app:layout_constraintStart_toEndOf="@id/fragment_chat_conversation_item_profile_picture"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/fragment_chat_conversation_item_name_tv"
            style="@style/MySchool.TextAppearance.Title1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fragment_chat_conversation_sent_date_tv"
            android:text="Nandra Saputra"/>

        <TextView
            android:id="@+id/fragment_chat_conversation_item_message_tv"
            style="@style/MySchool.TextAppearance.SubTitle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/fragment_chat_conversation_unread_count_tv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_chat_conversation_item_name_tv"
            android:text="Hi, Wassup?"
            android:ellipsize="end"
            android:lines="1"
            />

        <TextView
            android:id="@+id/fragment_chat_conversation_sent_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Yesterday"/>

        <TextView
            android:id="@+id/fragment_chat_conversation_unread_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>