<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/schedule_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MySchool.TextAppearance.SubTitle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/schedule_item_hour"
        app:layout_constraintBottom_toBottomOf="@id/schedule_item_hour"
        android:text="Physics 3"/>

    <TextView
        android:id="@+id/schedule_item_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MySchool.TextAppearance.SubTitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="2 PM ~ 4 PM"
        android:gravity="end"/>

</androidx.constraintlayout.widget.ConstraintLayout>