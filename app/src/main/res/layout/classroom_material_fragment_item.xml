<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="W, 1"
            android:padding="16dp">

            <ImageView
                android:id="@+id/fragment_classroom_material_item_file_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fragment_classroom_material_item_file_name"
                android:tint="@color/iconColorSecondary"
                android:src="@drawable/ic_attachment"/>

            <ImageView
                android:id="@+id/fragment_classroom_material_item_download"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:tint="@color/iconColorSecondary"
                android:src="@drawable/ic_download"/>

            <TextView
                android:id="@+id/fragment_classroom_material_item_file_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/fragment_classroom_material_item_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fragment_classroom_material_item_download"
                style="@style/MySchool.TextAppearance.Title1"
                android:textColor="@color/iconColorSecondary"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Reklaitis.pdf"/>

            <TextView
                android:id="@+id/fragment_classroom_material_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/MySchool.TextAppearance.SubTitle1"
                android:textColor="@color/iconColorSecondary"
                android:textSize="8sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="20/02/2000"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>