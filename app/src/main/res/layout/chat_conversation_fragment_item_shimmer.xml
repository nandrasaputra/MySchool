<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/channel_detail_item_photo_shimmer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@color/shimmerColorTwo"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/channel_detail_item_name_layout_shimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/channel_detail_item_photo_shimmer"
        app:layout_constraintBottom_toBottomOf="@id/channel_detail_item_photo_shimmer"
        app:layout_constraintStart_toEndOf="@id/channel_detail_item_photo_shimmer"
        app:layout_constraintEnd_toEndOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/channel_detail_item_channel_name_shimmer"
            android:layout_width="128dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@color/shimmerColorTwo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="8dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/channel_detail_item_publisher_name_shimmer"
            style="@style/MySchool.TextAppearance.SubTitle2"
            android:layout_width="240dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:src="@color/shimmerColorOne"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/channel_detail_item_channel_name_shimmer"
            app:riv_corner_radius="8dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/channel_detail_item_publish_date_shimmer"
            android:layout_width="56dp"
            android:layout_height="20dp"
            android:src="@color/shimmerColorOne"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_chat_conversation_unread_count_tv_shimmer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@color/shimmerColorTwo"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>