<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/classroom_detail_feed_item_photo_shimmer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"
        android:src="@color/shimmerColorTwo"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/classroom_detail_feed_item_name_layout_shimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/classroom_detail_feed_item_photo_shimmer"
        app:layout_constraintBottom_toBottomOf="@id/classroom_detail_feed_item_photo_shimmer"
        app:layout_constraintStart_toEndOf="@id/classroom_detail_feed_item_photo_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/classroom_detail_feed_item_publisher_name_shimmer"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@color/shimmerColorTwo"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/classroom_detail_feed_item_publish_date_shimmer"
            android:layout_width="128dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            app:riv_corner_radius="8dp"
            android:scaleType="centerCrop"
            android:src="@color/shimmerColorOne"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/classroom_detail_feed_item_publisher_name_shimmer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/classroom_detail_feed_item_content_photo_shimmer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/classroom_detail_feed_item_photo_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintDimensionRatio="W, 2:3"
        app:riv_corner_radius="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/arsene"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/classroom_detail_feed_item_content_title_shimmer"
        style="@style/MySchool.TextAppearance.Title1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/classroom_detail_feed_item_photo_shimmer"
        app:layout_constraintEnd_toEndOf="@id/classroom_detail_feed_item_name_layout_shimmer"
        app:layout_constraintTop_toBottomOf="@id/classroom_detail_feed_item_content_photo_shimmer"
        android:layout_marginTop="16dp"
        android:text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque"
        android:visibility="gone"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/classroom_detail_feed_item_content_body_shimmer"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/classroom_detail_feed_item_photo_shimmer"
        app:layout_constraintEnd_toEndOf="@id/classroom_detail_feed_item_name_layout_shimmer"
        app:layout_constraintTop_toBottomOf="@id/classroom_detail_feed_item_content_title_shimmer"
        android:src="@color/shimmerColorOne"
        android:scaleType="centerCrop"
        app:riv_corner_radius="8dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/classroom_detail_feed_item_content_body_two_shimmer"
        android:layout_width="256dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:src="@color/shimmerColorOne"
        app:layout_constraintStart_toStartOf="@id/classroom_detail_feed_item_photo_shimmer"
        app:layout_constraintTop_toBottomOf="@id/classroom_detail_feed_item_content_body_shimmer"
        app:riv_corner_radius="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>